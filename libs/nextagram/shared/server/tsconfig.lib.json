{
	"extends": "../../../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "dist",
		"types": ["node"],
		"rootDir": "src",
		"tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo"
	},
	"exclude": [
		"out-tsc",
		"dist",
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.tsx",
		"src/**/*.test.tsx",
		"src/**/*.spec.js",
		"src/**/*.test.js",
		"src/**/*.spec.jsx",
		"src/**/*.test.jsx",
		"eslint.config.js",
		"eslint.config.cjs",
		"eslint.config.mjs"
	],
	"include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
	"references": [
		{
			"path": "../i18n/tsconfig.lib.json"
		},
		{
			"path": "../env/tsconfig.lib.json"
		}
	]
}
