{
	"extends": "../../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "dist",
		"types": [
			"node",
			"@nx/react/typings/cssmodule.d.ts",
			"@nx/react/typings/image.d.ts",
			"next",
			"@nx/next/typings/image.d.ts"
		],
		"rootDir": "src",
		"jsx": "react-jsx",
		"lib": ["dom"],
		"tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo"
	},
	"exclude": [
		"out-tsc",
		"dist",
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.tsx",
		"src/**/*.test.tsx",
		"src/**/*.spec.js",
		"src/**/*.test.js",
		"src/**/*.spec.jsx",
		"src/**/*.test.jsx",
		"eslint.config.js",
		"eslint.config.cjs",
		"eslint.config.mjs"
	],
	"include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
	"references": [
		{
			"path": "../shared/utils/styling/tsconfig.lib.json"
		},
		{
			"path": "../shared/utils/dates/tsconfig.lib.json"
		},
		{
			"path": "../shared/ui/tsconfig.lib.json"
		},
		{
			"path": "../shared/i18n/tsconfig.lib.json"
		},
		{
			"path": "../shared/actions/tsconfig.lib.json"
		},
		{
			"path": "../shared/server/tsconfig.lib.json"
		}
	]
}
