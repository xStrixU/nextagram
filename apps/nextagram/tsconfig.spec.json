{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./out-tsc/vitest",
		"jsx": "preserve"
	},
	"include": [
		"vitest.config.ts",
		"vitest.config.mts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.test.jsx",
		"src/**/*.spec.jsx",
		"src/**/*.d.ts"
	],
	"references": [
		{
			"path": "./tsconfig.json"
		}
	]
}
